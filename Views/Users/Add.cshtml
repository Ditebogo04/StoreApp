@model StoreApp.Models.AddUserModel



<h1> User Details</h1>

<form method="post">
    <div class="mt-3">
        <label class="col-form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="col-form-label">Surname</label>
        <input type="text" class="form-control" asp-for="Surname"/>
    </div>

    <div class="mt-3">
        <label class="col-form-label">ContactNo</label>
        <input type="text" class="form-control" asp-for="ContactNo" />
    </div>

    <div class="mt-3">
        <label class="col-form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="col-form-label">Username</label>
        <input type="text" class="form-control" asp-for="UserName" />
    </div>

    <div class="mt-3">
        <label class="col-form-label">Password</label>
        <input type="text" class="form-control" asp-for="Password" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>